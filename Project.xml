<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://lime.software/project/1.0.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.software/project/1.0.3 http://lime.software/xsd/project-1.0.3.xsd">
	<!-- _________________________ Application Settings _________________________ -->

	<app title="Friday Night Funkin': Plasma Engine" file="PlasmaEngine" packageName="com.swordcube.plasmaengine" package="com.swordcube.plasmaengine" main="Main" version="1.0.0" company="swordcube" />

	<app preloader="flixel.system.FlxPreloader" />
	<set name="SWF_VERSION" value="11.8" />

	<!-- ____________________________ Window Settings ___________________________ -->

	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>

	<!-- _____________________________ Path Settings ____________________________ -->

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />

	<source name="src" />

	<assets path="assets" />
	<assets path='mods' rename='mods' embed='false'/>

	<!-- ________________________________ Defines _______________________________ -->

	<define name="LUA_ALLOWED" if="desktop" unless="web || hl || neko"/>
	<define name="VIDEOS_ALLOWED" if="desktop || android" unless="hl || neko"/>
	<define name="UPDATE_CHECKING" unless="web || hl || neko"/>

	<!-- _______________________________ Libraries ______________________________ -->

	<haxelib name="flixel-leather" rename="flixel" /> <!-- https://github.com/Leather128/flixel -->
	<haxelib name="hscript-improved" /> <!-- https://github.com/YoshiCrafter29/hscript-improved -->
	<haxelib name="linc_luajit" if="LUA_ALLOWED"/> <!-- https://github.com/swordcube/linc_luajit -->
	<haxelib name="tjson" />
	<haxelib name="discord_rpc" if="desktop cpp"/> <!-- https://github.com/Aidan63/linc_discord-rpc -->
	<haxelib name="hxCodec" if="VIDEOS_ALLOWED"/> <!-- https://github.com/polybiusproxy/hxCodec -->
	<haxelib name="markdown" />

	<haxelib name="hxcpp-debug-server" if="debug cpp" />

	<!-- ______________________________ Haxedefines _____________________________ -->

	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<haxedef name="HXCPP_GC_BIG_BLOCKS" if="cpp" /> <!-- mmmm memory -->
	<haxedef name="no-deprecation-warnings" /> <!-- heheheha -->

	<!-- HScript shit!! -->
	<haxedef name="HXCPP_CHECK_POINTER" if="release" />
	<haxedef name="HXCPP_STACK_LINE" if="release" />
	<haxedef name="HXCPP_DEBUG_LINK" if="release" />
	<haxedef name="hscriptPos" />
	<haxeflag name="-dce no" />

	<haxeflag name="--macro" value="include('funkin')" />
	<haxeflag name="--macro" value="include('flixel')" />
	<haxeflag name="--macro" value="include('sys')" unless="web" />
	<haxeflag name="--macro" value="include('DateTools')" />
	<haxeflag name="--macro" value="include('EReg')" />
	<haxeflag name="--macro" value="include('Lambda')" />
	<haxeflag name="--macro" value="include('StringBuf')" />
	<haxeflag name="--macro" value="include('haxe.crypto')" />
	<haxeflag name="--macro" value="funkin.macros.StdDeprecationsRemover.init()" />

	<!-- _________________________________ Custom _______________________________ -->
	
	<icon path="art/icon16.png" size='16'/>
	<icon path="art/icon32.png" size='32'/>
	<icon path="art/icon64.png" size='64'/>
	<icon path="art/iconOG.png" />
</project>
