<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- _________________________ Application Settings _________________________ -->

	<app title="FNF: Plasma Engine" file="PlasmaEngine" main="Main" version="0.0.1" company="swordcube" />

	<!-- ____________________________ Window Settings ___________________________ -->

	<!--These window settings apply to all targets-->
	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />

	<window if="html5" resizable="true" />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" />

	<!-- _____________________________ Path Settings ____________________________ -->

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />

	<source path="src" />
	<assets path="assets" />
	<assets path="mods" />

	<!-- ____________________________ Engine Settings ____________________________-->

	<define name="VIDEOS_ALLOWED" if="desktop || android" />
	<define name="DISCORD_RPC" if="desktop cpp" />

	<!-- _______________________________ Libraries ______________________________ -->

	<haxelib name="flixel" />
	<haxelib name="discord_rpc" if="DISCORD_RPC" />
	<haxelib name="hscript-improved" />
	<haxelib name="tjson" />
	<haxelib name="hxCodec" if="VIDEOS_ALLOWED" />

	<haxelib name="hxcpp-debug-server" if="debug cpp" /> <!-- mmmm debugging -->

	<!-- ______________________________ Haxedefines _____________________________ -->

	<haxedef name="FLX_NO_MOUSE" if="mobile" />
	<haxedef name="FLX_NO_KEYBOARD" if="mobile" />
	<haxedef name="FLX_NO_TOUCH" if="desktop" />
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />

	<haxedef name="HXCPP_GC_BIG_BLOCKS" if="cpp" /> <!-- mmmm memory -->
	<haxedef name="no-deprecation-warnings" /> <!-- heheheha -->

	<!-- HScript shit!! -->
	<haxedef name="hscriptPos" />
	<haxeflag name="-dce no" />

	<haxeflag name="--macro" value="include('funkin')" /> <!-- Compiles the entirety of the "funkin" folder into the exe-->
	<haxeflag name="--macro" value="include('flixel')" /> <!-- Compiles the entirety of flixel into the exe-->
	<haxeflag name="--macro" value="include('sys')" /> <!-- Compiles the entirety of sys into the exe -->
	<haxeflag name="--macro" value="include('DateTools')" />
	<haxeflag name="--macro" value="include('EReg')" />
	<haxeflag name="--macro" value="include('Lambda')" />
	<haxeflag name="--macro" value="include('StringBuf')" />
	<haxeflag name="--macro" value="include('haxe.crypto')" />

	<!-- __________________________________ Icons ________________________________ -->

	<icon path="art/icon16.png" size='16'/>
	<icon path="art/icon32.png" size='32'/>
	<icon path="art/icon64.png" size='64'/>
	<icon path="art/icon128.png" size='128'/>
	<icon path="art/icon256.png" size='256'/>
	<icon path="art/icon512.png" size='512'/>
	<icon path="art/iconOG.png" />

	<!-- _________________________________ Custom _______________________________ -->
</project>
