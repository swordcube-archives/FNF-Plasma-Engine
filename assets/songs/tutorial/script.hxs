function beatHit(curBeat) {
    if (curBeat % 16 == 15 && dad.curCharacter == "gf" && curBeat > 16 && curBeat < 48) {
        bf.playAnim('hey', true);
        dad.playAnim('cheer', true);
    }

    if (curBeat % 16 == 15 && dad.curCharacter != "gf" && curBeat > 16 && curBeat < 48) {
        bf.playAnim('hey', true);
        gf.playAnim('cheer', true);
    }
}