/*
    Sets GF head bopping speed,
    Value 1: 1 = Normal speed,
    2 = 1/2 speed, 4 = 1/4 speed etc.
*/

function event(speed:String) {
    // this function took 4637835674832836473829 centuries for me to make
    // because of how hard it was
    var parsed:Int = Std.parseInt(speed);
    if(Math.isNaN(parsed) || parsed < 1) = parsed = 1;
    gfSpeed = parsed;
}