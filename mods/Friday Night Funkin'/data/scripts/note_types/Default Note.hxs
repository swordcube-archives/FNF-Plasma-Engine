function onNoteCreation(event:NoteCreationEvent) {
    event.note.useRGBShader = true;
}
function onPlayerNoteHit(event:NoteHitEvent) {
    if(event.note.isSustain || !Settings.get("Note Splashes")) return;
    var strums = event.note.parent.strums;
    var strum = strums.members[event.note.direction];
    var splash = new NoteSplash(strum.x, strum.y, event.note.splashSkin, event);
    PlayState.UI.add(splash);
}